<Page x:Class="MyWpfFramework.Views.Login.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" FlowDirection="RightToLeft"
      d:DesignHeight="300" d:DesignWidth="300"  Language="fa-IR"
      Title="WelcomePage">
    <StackPanel Margin="5" x:Name="panelContent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Margin="5" HorizontalAlignment="Center"
                   Text="خوش آمدید!"
                   FontFamily="/Resources/irsans.ttf#Iranian Sans"
                   FontSize="23" FontWeight="Bold" />
        <Image Source="Images/welcome.png"
               Width="296" Height="214"
               Stretch="UniformToFill" />
        <TextBlock Margin="5" HorizontalAlignment="Center"
                   Text="{Binding Message}"
                   FontSize="23" FontWeight="Bold" />
    </StackPanel>
</Page>